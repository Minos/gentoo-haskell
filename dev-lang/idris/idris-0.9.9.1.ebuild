	dev-haskell/ansi-terminal
	dev-haskell/binary
	>=dev-haskell/cabal-1.16.0
	>=dev-haskell/haskeline-0.7
	>=dev-haskell/language-java-0.2.2
	dev-haskell/libffi
	dev-haskell/mtl
	>=dev-haskell/parsec-3
	dev-haskell/split
	dev-haskell/text
	dev-haskell/transformers
	dev-haskell/vector
	dev-haskell/vector-binary-instances
