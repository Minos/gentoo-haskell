"

src_prepare() {
	cabal_chdeps \
		'llvm-general==3.3.5.*' 'llvm-general>=3.3.5 && < 3.4, llvm-general-pure>=3.3.5 && < 3.4'
	epatch "${FILESDIR}/${PN}-0.9.9.1-llvm-general-3.3.8.1.patch"
}

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag llvm llvm) \
		$(cabal_flag noeffects noeffects)
}
